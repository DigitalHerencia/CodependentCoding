{
  "project_setup": {
    "install": [
      "next@latest",
      "react@latest",
      "react-dom@latest",
      "typescript@latest",
      "prisma",
      "@prisma/client",
      "tailwindcss",
      "postcss",
      "autoprefixer",
      "@clerk/nextjs",
      "@clerk/backend",
      "zod",
      "@uploadthing/react",
      "@uploadthing/middleware",
      "@uploadthing/next"
    ],
    "tailwind_init": true,
    "tailwind_content_paths": [
      "./app/**/*.{js,ts,jsx,tsx}",
      "./components/**/*.{js,ts,jsx,tsx}"
    ]
  },
  "clerk": {
    "env_vars": [
      "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
      "CLERK_SECRET_KEY",
      "CLERK_PRODUCTION_WEBHOOK_SECRET"
    ],
    "notes": "Wrap app in <ClerkProvider> in layout.tsx"
  },
  "prisma": {
    "models": {
      "User": {
        "id": "String @id @default(uuid())",
        "clerkId": "String @unique",
        "email": "String?",
        "firstName": "String?",
        "lastName": "String?",
        "archives": "Archive[]"
      },
      "Archive": {
        "id": "String @id @default(uuid())",
        "userId": "String",
        "title": "String",
        "content": "String",
        "attachments": "Json",
        "createdAt": "DateTime @default(now())",
        "updatedAt": "DateTime @updatedAt",
        "relation": "user User @relation(fields: [userId], references: [id])"
      }
    }
  },
  "server_actions": {
    "path": "lib/actions/archive.ts",
    "notes": "Use 'use server' and zod for validation"
  },
  "webhook": {
    "path": "app/api/clerk/webhook-handler/route.ts",
    "verify_logic": "timing-safe HMAC verification",
    "response_on_invalid": "401"
  },
  "testing": [
    "Clerk webhook upsert",
    "Archive CRUD logic",
    "Server actions"
  ],
  "deployment": {
    "platform": "Vercel",
    "env_vars": ["DATABASE_URL","DATABASE_URL_UNPOOLED","NEON_API_KEY","CLERK_*"]
  }
}
